<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:layerType="software">

    <com.common.viewlib.AutoFitview.AutoFitViewPager
        android:id="@+id/banner_item_layout_autofit_viewpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.common.viewlib.AutoFitview.AutoFitViewPager>

    <LinearLayout
        android:id="@+id/ll_indicators"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/banner_item_layout_autofit_viewpager"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="15dp">

    </LinearLayout>
</RelativeLayout>